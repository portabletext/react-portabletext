{
  "extends": "./tsconfig.settings",
  "include": ["./demo", "./package.config.ts", "./package.json", "./src", "./test"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",

    "jsx": "react-jsx",
    "lib": ["ES2016", "DOM"],
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}

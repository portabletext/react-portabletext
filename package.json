{
  "name": "@portabletext/react",
  "version": "1.0.6",
  "description": "Render Portable Text with React",
  "types": "./dist/react-portable-text.d.ts",
  "source": "./src/index.ts",
  "module": "./dist/react-portable-text.esm.js",
  "main": "./dist/react-portable-text.js",
  "exports": {
    ".": {
      "types": "./dist/react-portable-text.d.ts",
      "source": "./src/index.ts",
      "import": "./dist/react-portable-text.esm.js",
      "require": "./dist/react-portable-text.js",
      "default": "./dist/react-portable-text.esm.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "!dist/stats.html",
    "src"
  ],
  "scripts": {
    "lint": "eslint . && tsc --noEmit",
    "prepublishOnly": "npm run build && npm run lint",
    "build:demo": "vite build demo --config=./vite.config.demo.ts --base=/react-portabletext/",
    "build": "rimraf dist && pkg-utils build && pkg-utils --strict",
    "dev": "vite demo",
    "start": "vite demo",
    "test": "tap test/*.test.*",
    "prettify": "prettier --write src/**/*.ts src/**/*.tsx test/**/*.ts test/**/*.tsx",
    "prettify-check": "prettier --check src/**/*.ts src/**/*.tsx test/**/*.ts test/**/*.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/portabletext/react-portabletext.git"
  },
  "keywords": [
    "portable-text"
  ],
  "author": "Sanity.io <hello@sanity.io>",
  "license": "MIT",
  "dependencies": {
    "@portabletext/toolkit": "^1.0.5",
    "@portabletext/types": "^1.0.3"
  },
  "devDependencies": {
    "@sanity/pkg-utils": "^1.15.0",
    "@sanity/ui": "^0.37.7",
    "@types/leaflet": "^1.7.9",
    "@types/react": "^17.0.44",
    "@types/react-dom": "^17.0.15",
    "@types/refractor": "^3.0.2",
    "@types/styled-components": "^5.1.25",
    "@types/tap": "^15.0.6",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-sanity": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "leaflet": "^1.7.1",
    "prettier": "^2.6.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-leaflet": "^3.2.5",
    "react-refractor": "^2.1.7",
    "refractor": "^3.6.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-visualizer": "^5.6.0",
    "styled-components": "^5.3.5",
    "tap": "^16.0.1",
    "typescript": "^4.6.3",
    "vite": "^2.9.1"
  },
  "peerDependencies": {
    "react": "^17 || ^18"
  },
  "bugs": {
    "url": "https://github.com/portabletext/react-portabletext/issues"
  },
  "homepage": "https://github.com/portabletext/react-portabletext#readme",
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "bracketSpacing": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "extends": [
      "sanity",
      "sanity/react",
      "sanity/typescript",
      "prettier"
    ],
    "ignorePatterns": [
      "lib/**/"
    ]
  },
  "tap": {
    "node-arg": [
      "-r",
      "esbuild-register"
    ],
    "check-coverage": false
  }
}

{
  "name": "@portabletext/react",
  "version": "3.2.3",
  "description": "Render Portable Text with React",
  "keywords": [
    "portable-text"
  ],
  "homepage": "https://github.com/portabletext/react-portabletext#readme",
  "bugs": {
    "url": "https://github.com/portabletext/react-portabletext/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/portabletext/react-portabletext.git"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "!dist/stats.html",
    "src"
  ],
  "scripts": {
    "build": "pkg-utils build --strict --check --clean",
    "build:demo": "vite build demo --config=./vite.config.demo.ts --base=/react-portabletext/",
    "clean": "rimraf dist coverage demo/dist .nyc_output",
    "dev": "vite demo --config=./vite.config.demo.ts",
    "format": "prettier --write --cache --ignore-unknown .",
    "lint": "eslint .",
    "prepublishOnly": "run-s build lint type-check",
    "release": "changeset publish",
    "start": "pnpm dev",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "browserslist": [
    "extends @sanity/browserslist-config",
    "node 14"
  ],
  "prettier": "@sanity/prettier-config",
  "eslintConfig": {
    "parserOptions": {
      "ecmaFeatures": {
        "modules": true
      },
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "plugins": [
      "react-compiler"
    ],
    "extends": [
      "sanity",
      "sanity/react",
      "sanity/typescript",
      "prettier"
    ],
    "rules": {
      "react-compiler/react-compiler": "error",
      "react/prop-types": "off"
    },
    "ignorePatterns": [
      "dist/**/"
    ]
  },
  "dependencies": {
    "@portabletext/toolkit": "^2.0.18",
    "@portabletext/types": "^2.0.15"
  },
  "devDependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@sanity/browserslist-config": "^1.0.5",
    "@sanity/pkg-utils": "^8.0.3",
    "@sanity/prettier-config": "^2.0.1",
    "@sanity/ui": "^3.0.7",
    "@types/leaflet": "^1.9.20",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/ws": "^8.5.14",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.7.0",
    "babel-plugin-react-compiler": "19.1.0-rc.2",
    "esbuild": "^0.25.9",
    "esbuild-register": "^3.6.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-sanity": "^7.1.4",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "leaflet": "^1.9.4",
    "npm-run-all2": "^5.0.2",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-is": "^19.1.1",
    "react-leaflet": "^5.0.0",
    "react-refractor": "^4.0.0",
    "refractor": "^5.0.0",
    "rimraf": "^5.0.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "styled-components": "npm:@sanity/css-in-js@6.1.18-33",
    "typescript": "5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^17 || ^18 || >=19.0.0-0"
  },
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

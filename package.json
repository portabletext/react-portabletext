{
  "name": "@portabletext/react",
  "version": "6.0.2",
  "description": "Render Portable Text with React",
  "keywords": [
    "portable-text"
  ],
  "homepage": "https://github.com/portabletext/react-portabletext#readme",
  "bugs": {
    "url": "https://github.com/portabletext/react-portabletext/issues"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/portabletext/react-portabletext.git"
  },
  "files": [
    "dist",
    "!dist/stats.html"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": "./dist/index.js",
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "build": "tsdown",
    "prebuild:demo": "pnpm clean",
    "build:demo": "vite build demo --config=./vite.config.demo.ts --base=/react-portabletext/",
    "clean": "rimraf dist coverage demo/dist .nyc_output",
    "dev": "vite demo --config=./vite.config.demo.ts",
    "format": "oxfmt .",
    "lint": "oxlint --type-aware --type-check --deny-warnings --report-unused-disable-directives",
    "prepublishOnly": "pnpm build",
    "release": "changeset publish",
    "start": "pnpm dev",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@portabletext/toolkit": "^5.0.1",
    "@portabletext/types": "^4.0.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@sanity/tsconfig": "^2.1.0",
    "@sanity/tsdown-config": "^0.5.7",
    "@sanity/ui": "^3.1.11",
    "@types/leaflet": "^1.9.21",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "esbuild": "^0.27.2",
    "esbuild-register": "^3.6.0",
    "leaflet": "^1.9.4",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "oxlint-tsgolint": "^0.11.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-is": "^19.2.3",
    "react-leaflet": "^5.0.0",
    "react-refractor": "^4.0.0",
    "refractor": "^5.0.0",
    "rimraf": "^5.0.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "styled-components": "npm:@sanity/css-in-js@6.2.1",
    "tsdown": "^0.19.0",
    "typescript": "5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "react": "^18.2 || ^19"
  },
  "lint-staged": {
    "*": [
      "oxfmt"
    ]
  },
  "engines": {
    "node": ">=20.19 <22 || >=22.12"
  },
  "packageManager": "pnpm@10.27.0"
}
